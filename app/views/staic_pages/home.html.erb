<% if @user %>
  <div>  
    <p>Hello <%= @user.name %>!</p>
    <p>Balance: <%= @user.balance %></p>
    <%= render 'transactions/list' %>
    <%= link_to "Add new transaction", new_user_transaction_path(@user.id) %>
  </div>
<%else%>
  <div class="center hero-unit">
  <h1>Welcome to the MoneyCalc</h1>

  <%= link_to "Sign in", sign_in_path, class: "btn btn-large btn-primary" %>
  <br/>
  or
  <br/>
  <%= link_to "Sign up now!", sign_up_path, class: "btn btn-large btn-primary" %>
  <% end %>
</div>
